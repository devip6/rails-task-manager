<div class="container">
<h1>My Tasks</h1>
<div class="col-md-12 ">

  <% @task.each do |task| %>
  <h4>
 <%= link_to task.title, task_path(task), class: "btn btn-secondary" %>
  <%= link_to "DELETE", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
</h4>
  <% end %>
<%= link_to "Add a new task", new_task_path, class: "btn btn-primary" %>
</div>
</div>
