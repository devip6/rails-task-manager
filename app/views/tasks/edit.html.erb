<div class="container">
  <h1>Edit Task</h1>
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control form-control-lg' %>
    <%= f.submit "Edit Task", class: 'mt-3' %>
  <% end %>
</div>
