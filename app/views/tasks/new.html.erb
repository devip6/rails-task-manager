<div class="container">
<h1>Add a new task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control form-control-lg' %>
  <%= f.submit "Create Task", class: 'mt-3 btn btn-success' %>
<% end %>
<%= link_to "Back to list", tasks_path,  class: "btn btn-primary" %>
</div>
